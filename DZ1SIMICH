}


#4
#include <iostream>

int main() {
    int number;

    // Введите неотрицательное целое число
    std::cout << "Введите неотрицательное целое число: ";
    std::cin >> number;

    // Найдите число десятков
    int tens = (number / 10) % 10;

    // Выведите число десятков
    std::cout << "Число десятков: " << tens << std::endl;

    return 0;
}


#5
#include <iostream>

int main() {
    int number;

    // Введите двузначное число
    std::cout << "Введите двузначное число: ";
    std::cin >> number;

    // Проверьте, что введено двузначное число (от 10 до 99)
    if (number >= 10 && number <= 99) {
        // Найдите число десятков
        int tens = number / 10;

        // Выведите число десятков
        std::cout << "Число десятков: " << tens << std::endl;
    } else {
        std::cout << "Введенное число не является двузначным." << std::endl;
    }

    return 0;
}


#6
#include <iostream>

int main() {
    int num1, num2;

    // Введите два целых числа
    std::cout << "Введите первое целое число: ";
    std::cin >> num1;

    std::cout << "Введите второе целое число: ";
    std::cin >> num2;

    // Вычислите среднее арифметическое
    double average = (num1 + num2) / 2.0;

    // Выведите результат
    std::cout << "Среднее арифметическое: " << average << std::endl;

    return 0;
}


#7
#include <iostream>
#include <cmath> // Для использования функции sqrt

int main() {
    int num1, num2;

    // Введите два целых числа
    std::cout << "Введите первое целое число: ";
    std::cin >> num1;

    std::cout << "Введите второе целое число: ";
    std::cin >> num2;

    // Вычислите среднее геометрическое
    if (num1 >= 0 && num2 >= 0) {
        double geometricMean = sqrt(static_cast<double>(num1) * num2);

        // Выведите результат
        std::cout << "Среднее геометрическое: " << geometricMean << std::endl;
    } else {
        std::cout << "Оба числа должны быть неотрицательными." << std::endl;
    }

    return 0;
}


#8
#include <iostream>
#include <cmath> // Для использования функции sqrt

int main() {
    double x1, y1, x2, y2;

    // Введите координаты первой точки
    std::cout << "Введите x1: ";
    std::cin >> x1;
    
    std::cout << "Введите y1: ";
    std::cin >> y1;

    // Введите координаты второй точки
    std::cout << "Введите x2: ";
    std::cin >> x2;
    
    std::cout << "Введите y2: ";
    std::cin >> y2;

    // Вычислите расстояние между точками
    double distance = sqrt(pow(x2 - x1, 2) + pow(y2 - y1, 2));

    // Выведите результат
    std::cout << "Расстояние между точками: " << distance << std::endl;

    return 0;
}


#9
#include <iostream>

int main() {
    double num1, num2, num3;

    // Введите три разных числа
    std::cout << "Введите первое число: ";
    std::cin >> num1;
    
    std::cout << "Введите второе число: ";
    std::cin >> num2;
    
    std::cout << "Введите третье число: ";
    std::cin >> num3;

    // Найдите среднее число
    if ((num1 > num2 && num1 < num3) || (num1 < num2 && num1 > num3)) {
        std::cout << "Среднее число: " << num1 << std::endl;
    } else if ((num2 > num1 && num2 < num3) || (num2 < num1 && num2 > num3)) {
        std::cout << "Среднее число: " << num2 << std::endl;
    } else {
        std::cout << "Среднее число: " << num3 << std::endl;
    }

    return 0;
}


#10
#include <iostream>
#include <cmath> // Для использования функции sqrt

int main() {
    double a, b, c;

    // Введите коэффициенты квадратного уравнения
    std::cout << "Введите коэффициент a: ";
    std::cin >> a;

    std::cout << "Введите коэффициент b: ";
    std::cin >> b;

    std::cout << "Введите коэффициент c: ";
    std::cin >> c;

    // Вычислите дискриминант
    double discriminant = b * b - 4 * a * c;

    // Проверьте тип корней и выведите результат
    if (discriminant > 0) {
        double root1 = (-b + sqrt(discriminant)) / (2 * a);
        double root2 = (-b - sqrt(discriminant)) / (2 * a);
        std::cout << "Два корня: x1 = " << root1 << ", x2 = " << root2 << std::endl;
    } else if (discriminant == 0) {
        double root = -b / (2 * a);
        std::cout << "Один корень: x = " << root << std::endl;
    } else {
        std::cout << "Уравнение не имеет действительных корней." << std::endl;
    }

    return 0;
}


#11
#include <iostream>

int main() {
    int num1, num2, num3;

    // Введите три целых числа
    std::cout << "Введите первое целое число: ";
    std::cin >> num1;

    std::cout << "Введите второе целое число: ";
    std::cin >> num2;

    std::cout << "Введите третье целое число: ";
    std::cin >> num3;

    // Найдите наибольшее число
    int maxNumber = num1; // Предположим, что первое число - наибольшее

    if (num2 > maxNumber) {
        maxNumber = num2; // Если второе число больше, обновляем maxNumber
    }

    if (num3 > maxNumber) {
        maxNumber = num3; // Если третье число больше, обновляем maxNumber
    }

    // Выведите результат
    std::cout << "Наибольшее число: " << maxNumber << std::endl;

    return 0;
}


#12
#include <iostream>

int main() {
    double a, b, c;

    // Введите длины трех отрезков
    std::cout << "Введите длину первого отрезка (a): ";
    std::cin >> a;

    std::cout << "Введите длину второго отрезка (b): ";
    std::cin >> b;

    std::cout << "Введите длину третьего отрезка (c): ";
    std::cin >> c;

    // Проверьте, существует ли треугольник
    if (a + b > c && a + c > b && b + c > a) {
        // Определите тип треугольника
        if (a == b && b == c) {
            std::cout << "Треугольник равносторонний." << std::endl;
        } else if (a == b || a == c || b == c) {
            std::cout << "Треугольник равнобедренный." << std::endl;
        } else {
            std::cout << "Треугольник разносторонний." << std::endl;
        }
    } else {
        std::cout << "Треугольник с такими длинами отрезков не существует." << std::endl;
    }

    return 0;
}


#13
#include <iostream>

int main() {
    double x, y;

    // Введите координаты точки
    std::cout << "Введите координату x: ";
    std::cin >> x;

    std::cout << "Введите координату y: ";
    std::cin >> y;

    // Определите четверть координатной плоскости
    if (x > 0 && y > 0) {
        std::cout << "Точка принадлежит первой четверти." << std::endl;
    } else if (x < 0 && y > 0) {
        std::cout << "Точка принадлежит второй четверти." << std::endl;
    } else if (x < 0 && y < 0) {
        std::cout << "Точка принадлежит третьей четверти." << std::endl;
    } else if (x > 0 && y < 0) {
        std::cout << "Точка принадлежит четвёртой четверти." << std::endl;
    } else if (x == 0 && y == 0) {
        std::cout << "Точка находится в начале координат." << std::endl;
    } else if (x == 0) {
        std::cout << "Точка находится на оси y." << std::endl;
    } else if (y == 0) {
        std::cout << "Точка находится на оси x." << std::endl;
    }

    return 0;
}


#14
#include <iostream>

int main() {
    int n;
    
    // Введите число, для которого нужно вычислить двойной факториал
    std::cout << "Введите целое число n: ";
    std::cin >> n;

    // Инициализируем результат двойного факториала
    int doubleFactorial = 1;

    // Начинаем с n и уменьшаем значение на 2 на каждой итерации
    while (n >= 2) {
        doubleFactorial *= n;
        n -= 2;
    }

    // Выводим результат
    std::cout << "Двойной факториал: " << doubleFactorial << std::endl;

    return 0;
}


#15
#include <iostream>

int main() {
    int n;
    
    // Введите число, для которого нужно вычислить двойной факториал
    std::cout << "Введите целое число n: ";
    std::cin >> n;

    // Инициализируем результат двойного факториала
    int doubleFactorial = 1;

    // Используем цикл for для вычисления двойного факториала
    for (int i = n; i >= 2; i -= 2) {
        doubleFactorial *= i;
    }

    // Выводим результат
    std::cout << "Двойной факториал: " << doubleFactorial << std::endl;

    return 0;
}


#19
#include <iostream>
#include <cmath>

int main() {
    int N;

    // Введите число N
    std::cout << "Введите число N: ";
    std::cin >> N;

    std::cout << "Точные квадраты натуральных чисел, не превосходящие " << N << ": ";

    for (int i = 1; i * i <= N; ++i) {
        int square = i * i;
        std::cout << square << " ";
    }

    std::cout << std::endl;

    return 0;
}


#20
#include <iostream>

bool isPowerOf22(int N) {
    int power = 1;
    while (power < N) {
        power *= 22;
    }
    return power == N;
}

int main() {
    int N;

    // Введите число N
    std::cout << "Введите число N: ";
    std::cin >> N;

    if (isPowerOf22(N)) {
        std::cout << N << " является степенью числа 22." << std::endl;
    } else {
        std::cout << N << " не является степенью числа 22." << std::endl;
    }

    return 0;
}


#21
#include <iostream>

void printDigitsReverse(int N) {
    if (N == 0) {
        return; // Базовый случай: N равно 0, завершаем рекурсию
    }
    std::cout << N % 10; // Вывод последней цифры
    printDigitsReverse(N / 10); // Рекурсивный вызов для оставшихся цифр
}

int main() {
    int N;

    // Введите натуральное число N
    std::cout << "Введите натуральное число N: ";
    std::cin >> N;

    if (N < 0) {
        std::cout << "Ошибка: введите натуральное число." << std::endl;
        return 1;
    }

    std::cout << "Цифры числа " << N << " в обратном порядке: ";
    if (N == 0) {
        std::cout << "0"; // Отдельно обрабатываем случай, когда N равно 0
    } else {
        printDigitsReverse(N);
    }
    std::cout << std::endl;

    return 0;
}


#22
#include <iostream>

int findGCD(int a, int b) {
    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }
    return a;
}

int main() {
    int num1, num2;

    // Введите два положительных целых числа
    std::cout << "Введите первое положительное целое число: ";
    std::cin >> num1;

    std::cout << "Введите второе положительное целое число: ";
    std::cin >> num2;

    if (num1 <= 0 || num2 <= 0) {
        std::cout << "Ошибка: Введите положительные целые числа." << std::endl;
        return 1;
    }

    // Найдем НОД
    int gcd = findGCD(num1, num2);

    // Выведем результат
    std::cout << "Наибольший общий делитель (НОД): " << gcd << std::endl;

    return 0;
}


#23
#include <iostream>
#include <string>

int main() {
    // Создаем массив строк для описания отметок
    std::string descriptions[] = {
        "плохо",
        "неудовлетворительно",
        "удовлетворительно",
        "хорошо",
        "отлично"
    };

    int mark;

    // Введите оценку (1-5)
    std::cout << "Введите оценку (1-5): ";
    std::cin >> mark;

    if (mark < 1 || mark > 5) {
        std::cout << "Ошибка: Введите оценку в диапазоне от 1 до 5." << std::endl;
        return 1;
    }

    // Выводим словесное описание
    std::cout << "Оценка: " << descriptions[mark - 1] << std::endl;

    return 0;
}

